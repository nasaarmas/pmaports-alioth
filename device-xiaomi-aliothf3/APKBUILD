# Reference: <https://postmarketos.org/devicepkg>
# Maintainer: Nikroks <nikroksm@mail.ru>
pkgname=device-xiaomi-aliothf3
pkgdesc="Xiaomi POCO F3"
pkgver=1
pkgrel=0
url="https://postmarketos.org"
license="MIT"
arch="aarch64"
options="!check !archcheck"
depends="
	alsa-ucm-conf
	bootmac
	hexagonrpcd
	make-dynpart-mappings
	mesa-vulkan-freedreno
	mkbootimg
	swclock-offset
	linux-xiaomi-aliothf3
	postmarketos-base
	qbootctl
"
makedepends="devicepkg-dev"
source="
	81-libssc-xiaomi-alioth.rules
	alsa-ucm-conf/alioth.conf
	alsa-ucm-conf/HiFi.conf
	deviceinfo
	hexagonrpcd.confd
	modules-initfs
"
subpackages="
	$pkgname-nonfree-firmware:nonfree_firmware
	$pkgname-nonfree-firmware-openrc:nonfree_firmware_openrc
"

build() {
	devicepkg_build $startdir $pkgname
}

package() {
	devicepkg_package $startdir $pkgname

	# device-specific alsa ucm conf
	install -Dm644 "$srcdir/alioth.conf" \
		"$pkgdir/usr/share/alsa/ucm2/Xiaomi/alioth/alioth.conf"

	install -Dm644 "$srcdir/HiFi.conf" \
		"$pkgdir/usr/share/alsa/ucm2/Xiaomi/alioth/HiFi.conf"

	mkdir -p "$pkgdir/usr/share/alsa/ucm2/conf.d/sm8250"
	ln -s ../../Xiaomi/alioth/alioth.conf \
		"$pkgdir/usr/share/alsa/ucm2/conf.d/sm8250/xiaomi-alioth.conf"
}

nonfree_firmware() {
	pkgdesc="GPU, venus, modem and sensor firmware"
	depends="
		firmware-xiaomi-alioth
		firmware-qcom-adreno-a650
		linux-firmware-qcom
		linux-firmware-qca
		linux-firmware-ath11k
		tqftpserv
	"
	mkdir "$subpkgdir"

	install -Dm644 81-libssc-xiaomi-alioth.rules \
		"$subpkgdir"/etc/udev/rules.d/81-libssc-xiaomi-alioth.rules

	install -Dm644 "$srcdir"/hexagonrpcd.confd \
		"$subpkgdir"/usr/share/hexagonrpcd/hexagonrpcd-sdsp.conf
}

nonfree_firmware_openrc() {
	install_if="$pkgname-nonfree-firmware=$pkgver-r$pkgrel openrc"
	install="$subpkgname.post-install $subpkgname.post-upgrade"
	depends="
		hexagonrpcd-openrc
		tqftpserv-openrc
	"
	mkdir -p "$subpkgdir"
}

